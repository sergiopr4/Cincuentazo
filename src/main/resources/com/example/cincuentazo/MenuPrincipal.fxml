<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MenuPrincipalController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #4ca1af);">

    <children>
        <VBox alignment="CENTER" spacing="20" layoutX="150" layoutY="80" prefWidth="300">
            <Label text="CINCUENTAZO"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="Selecciona cantidad de jugadores mÃ¡quina"
                   style="-fx-font-size: 16px; -fx-text-fill: white;"/>

            <HBox alignment="CENTER" spacing="10">
                <RadioButton text="1" fx:id="rb1" toggleGroup="$botsGroup"/>
                <RadioButton text="2" fx:id="rb2" toggleGroup="$botsGroup"/>
                <RadioButton text="3" fx:id="rb3" toggleGroup="$botsGroup"/>
            </HBox>

            <Button text="Iniciar Juego"
                    fx:id="btnIniciar"
                    prefWidth="160"
                    onAction="#iniciarJuego"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;"/>

            <Button text="Salir"
                    onAction="#salir"
                    prefWidth="160"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.FinJuegoController"
            prefWidth="500" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364);">

    <children>
        <VBox alignment="CENTER" spacing="25" layoutX="100" layoutY="60" prefWidth="300">
            <Label text="¡Juego Finalizado!"
                   style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Label fx:id="lblGanador"
                   text="Ganador: Jugador Humano"
                   style="-fx-font-size: 18px; -fx-text-fill: yellow;"/>

            <HBox alignment="CENTER" spacing="15">
                <Button text="Reiniciar" fx:id="btnReiniciar" onAction="#reiniciarJuego"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;"/>
                <Button text="Volver al menú" fx:id="btnVolverMenu" onAction="#volverMenu"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
